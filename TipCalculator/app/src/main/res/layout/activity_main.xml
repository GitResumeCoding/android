<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
    android:background="@color/colorPrimary">

    <TextView
        android:textColor="@color/colorTextPrimary"
        android:background="@color/colorTextViewBackground"
        android:textStyle="bold"
        android:textSize="@dimen/txtTitle"
        android:layout_margin="@dimen/margin"
        android:gravity="center"
        android:text="TIP CALCULATOR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:layout_gravity="center_horizontal"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:textStyle="italic"
        android:textColor="@color/colorTextSecondary"
        android:textColorHint="@color/colorTextSecondary"
        android:maxLength="6"
        android:textSize="@dimen/edtMeal"
        android:layout_margin="@dimen/margin"
        android:gravity="center"
        android:hint="Meal Cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtMeal"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:textColor="@color/colorTextSecondary"
        android:textStyle="italic"
        android:textSize="@dimen/txtSelectPercentage"
        android:layout_margin="@dimen/margin"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Select Tip Percentage"
        android:ems="10"
        android:id="@+id/edtSelectPercentage"
        android:layout_gravity="center_horizontal"/>


    <EditText
        android:textColor="@color/colorTextSecondary"
        android:textStyle="italic"
        android:textSize="@dimen/txtPercentage"
        android:layout_margin="@dimen/margin"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="15%"
        android:ems="10"
        android:id="@+id/txtPercentage"
        android:layout_gravity="center_horizontal"/>

    <SeekBar
        android:progress="15"
        android:max="50"
        android:layout_margin="@dimen/margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:textColor="@color/colorTextPrimary"
        android:background="@color/colorPrimaryDark"
        android:textSize="@dimen/btnReset"
        android:layout_margin="@dimen/margin"
        android:text="Reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnReset"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:textColor="@color/colorTextPrimary"
        android:background="@color/colorTextViewBackground"
        android:textSize="@dimen/txtResult"
        android:layout_margin="@dimen/margin"
        android:gravity="center"
        android:text="TOTAL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtResult"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:textColor="@color/colorTextPrimary"
        android:background="@color/colorTextViewBackground"
        android:textSize="@dimen/txtResult"
        android:layout_margin="@dimen/margin"
        android:gravity="center"
        android:text="TOTAL BILL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtBillResult"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
